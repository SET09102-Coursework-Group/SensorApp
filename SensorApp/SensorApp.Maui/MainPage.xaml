<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SensorApp.Maui.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="20"
            VerticalOptions="Center"
            HorizontalOptions="Center">

            <Label
                Text="Welcome to the Sensor App dashboard"
                FontSize="28"
                FontAttributes="Bold"
                TextColor="Black"
                HorizontalTextAlignment="Center" />

            <Label
                Text="To navigate this application use the side panel on the left panel!"
                FontSize="18"
                TextColor="Gray"
                HorizontalTextAlignment="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>