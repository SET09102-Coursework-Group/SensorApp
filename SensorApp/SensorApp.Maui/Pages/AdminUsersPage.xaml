<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:SensorApp.Maui.ViewModels"
             xmlns:models="clr-namespace:SensorApp.Maui.Models"
             x:Class="SensorApp.Maui.Pages.AdminUsersPage"
             x:DataType="viewmodel:AdminUsersViewModel"
             Title="Admin: Manage Users">

    <VerticalStackLayout Spacing="10" Padding="10">
        <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" />

        <CollectionView ItemsSource="{Binding Users}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:UserWithRoleDto">
                    <VerticalStackLayout Spacing="5" Padding="5">
                        <Label Text="{Binding Username}" FontAttributes="Bold" />
                        <Label Text="{Binding Email}" />
                        <Label Text="{Binding Role}" FontAttributes="Italic" LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
