<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"  
            xmlns:viewmodel="clr-namespace:SensorApp.Maui.ViewModels"  
            xmlns:models="clr-namespace:SensorApp.Shared.Models;assembly=SensorApp.Shared"  
            x:Class="SensorApp.Maui.Views.Pages.SensorMapPage"  
            x:DataType="viewmodel:SensorMapViewModel"  
            Title="App: Sensor Map">

    <Grid RowDefinitions="*">
        <maps:Map x:Name="SensorMap"
                   IsShowingUser="True"
                   MapType="Street"
                   Grid.Row="0"/>
    </Grid>

</ContentPage>