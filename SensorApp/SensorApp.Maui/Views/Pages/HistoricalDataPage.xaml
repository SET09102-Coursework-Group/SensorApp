<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
  x:Class="SensorApp.Maui.Views.Pages.HistoricalDataPage"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:vm="clr-namespace:SensorApp.Maui.ViewModels"
  xmlns:models="clr-namespace:SensorApp.Shared.Models;assembly=SensorApp.Shared"
  Title="Historical Data"
  x:DataType="vm:HistoricalDataViewModel">

    <VerticalStackLayout Padding="20" Spacing="15">

        <HorizontalStackLayout Spacing="10">
            <DatePicker Date="{Binding From, Mode=TwoWay}" Format="dd/MM/yyyy" />
            <DatePicker Date="{Binding To, Mode=TwoWay}" Format="dd/MM/yyyy" />
        </HorizontalStackLayout>

        <Entry Placeholder="Sensor Id" Keyboard="Numeric"
               Text="{Binding SelectedSensorId, Mode=TwoWay,
                      Converter={StaticResource NullableIntConverter}}" />

        <Entry Placeholder="Measurand Id" Keyboard="Numeric"
               Text="{Binding SelectedMeasurandId, Mode=TwoWay,
                      Converter={StaticResource NullableIntConverter}}" />

        <Button Text="Load" Command="{Binding LoadCommand}" IsEnabled="{Binding IsNotLoading}" />

        <CollectionView ItemsSource="{Binding Points}" HeightRequest="250">

            <CollectionView.Header>
                <Grid ColumnDefinitions="2*,*">
                    <Label Text="Timestamp" FontAttributes="Bold" />
                    <Label Text="Value" Grid.Column="1" FontAttributes="Bold" />
                </Grid>
            </CollectionView.Header>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:MeasurementModel">
                    <Grid ColumnDefinitions="2*,*">
                        <Label Text="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" />
                        <Label Text="{Binding Value}" Grid.Column="1" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

    </VerticalStackLayout>
</ContentPage>